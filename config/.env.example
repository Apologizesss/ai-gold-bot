# =============================================================================
# AI GOLD TRADING BOT - CONFIGURATION FILE EXAMPLE
# =============================================================================
#
# คำแนะนำ:
# 1. คัดลอกไฟล์นี้เป็น config/.env
# 2. แทนที่ค่าทั้งหมดด้วยข้อมูลจริงของคุณ
# 3. อย่า commit ไฟล์ .env ขึ้น Git! (มี .gitignore บล็อกอยู่แล้ว)
#
# =============================================================================

# =============================================================================
# MetaTrader 5 Account Credentials
# =============================================================================
# ดูข้อมูลจาก MT5 → Tools → Options → Server
# หรือจากอีเมลยืนยันบัญชีที่โบรกเกอร์ส่งมา

MT5_LOGIN=12345678
MT5_PASSWORD=YourPasswordHere
MT5_SERVER=YourBroker-Demo

# ตัวอย่าง:
# MT5_LOGIN=50123456
# MT5_PASSWORD=MySecurePass123
# MT5_SERVER=ICMarkets-Demo

# =============================================================================
# News API (Free Tier: 100 requests/day)
# =============================================================================
# ขอ API key ฟรีที่: https://newsapi.org
# สมัครแล้วจะได้รับ API key ทันที

NEWS_API_KEY=your_newsapi_key_here_32_characters

# ตัวอย่าง:
# NEWS_API_KEY=abc123def456ghi789jkl012mno345pq

# =============================================================================
# Telegram Bot (ไม่บังคับ - สำหรับการแจ้งเตือน)
# =============================================================================
# วิธีสร้าง:
# 1. เปิด Telegram หา @BotFather
# 2. ส่ง /newbot และตั้งชื่อตามต้องการ
# 3. คัดลอก bot token
# 4. หา @userinfobot เพื่อดู chat ID ของคุณ

TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz123456789
TELEGRAM_CHAT_ID=123456789

# เปิด/ปิดการแจ้งเตือนผ่าน Telegram
TELEGRAM_ENABLED=false

# =============================================================================
# Trading Parameters (พารามิเตอร์การเทรด)
# =============================================================================

# เงินทุนเริ่มต้น (USD)
INITIAL_CAPITAL=100.0

# ความเสี่ยงสูงสุดต่อการเทรด 1 ครั้ง (2% = 0.02)
MAX_RISK_PER_TRADE=0.02

# ขาดทุนสูงสุดต่อวัน (5% = 0.05)
# หากขาดทุนถึงระดับนี้ จะหยุดเทรดในวันนั้น
MAX_DAILY_LOSS=0.05

# Drawdown สูงสุดที่ยอมรับได้ (15% = 0.15)
# หากถึงระดับนี้ ระบบจะหยุดทำงานอัตโนมัติ
MAX_DRAWDOWN=0.15

# จำนวนสถานะสูงสุดที่เปิดพร้อมกัน
MAX_CONCURRENT_POSITIONS=2

# จำนวนการเทรดสูงสุดต่อวัน
MAX_DAILY_TRADES=5

# =============================================================================
# AI Model Thresholds (เกณฑ์ความเชื่อมั่นของ AI)
# =============================================================================

# LSTM confidence ขั้นต่ำ (70% = 0.70)
MIN_LSTM_CONFIDENCE=0.70

# Technical score ขั้นต่ำ (0-100)
MIN_TECHNICAL_SCORE=65

# Win probability ขั้นต่ำจาก Random Forest (75% = 0.75)
MIN_WIN_PROBABILITY=0.75

# =============================================================================
# Risk Management (การจัดการความเสี่ยง)
# =============================================================================

# Stop Loss ขั้นต่ำ/สูงสุด (pips)
MIN_STOP_LOSS_PIPS=10
MAX_STOP_LOSS_PIPS=50

# Take Profit แรก (TP1) - อัตราส่วน Risk:Reward
TP1_RISK_REWARD_RATIO=2.0

# Take Profit ที่สอง (TP2) - อัตราส่วน Risk:Reward
TP2_RISK_REWARD_RATIO=3.0

# เปอร์เซ็นต์ที่ปิดสถานะเมื่อถึง TP1 (50% = 0.50)
TP1_CLOSE_PERCENTAGE=0.50

# Trailing stop (เป็นเท่าของ ATR)
TRAILING_STOP_ATR_MULTIPLIER=0.5

# =============================================================================
# Trading Hours (เวลาที่อนุญาตให้เทรด - GMT+7 Bangkok Time)
# =============================================================================

# เวลาเริ่มต้น (14:00 = 2:00 PM)
TRADING_START_HOUR=14

# เวลาสิ้นสุด (22:00 = 10:00 PM)
TRADING_END_HOUR=22

# เทรดในวันศุกร์หรือไม่ (true/false)
TRADE_ON_FRIDAY=true

# ชั่วโมงสุดท้ายของวันศุกร์ที่ยังเทรดได้ (20:00 = 8:00 PM)
FRIDAY_CUTOFF_HOUR=20

# =============================================================================
# Database (ฐานข้อมูล)
# =============================================================================

# เส้นทางไฟล์ฐานข้อมูล SQLite
DATABASE_PATH=data/trading.db

# เก็บประวัติการเทรดกี่วัน (0 = เก็บทั้งหมด)
DATABASE_RETENTION_DAYS=0

# =============================================================================
# Logging (การบันทึกข้อมูล)
# =============================================================================

# ระดับการแสดงผล: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# เส้นทางไฟล์ log
LOG_FILE_PATH=logs/trading.log

# ขนาดไฟล์ log สูงสุด (MB)
LOG_MAX_SIZE_MB=10

# จำนวนไฟล์ backup สูงสุด
LOG_BACKUP_COUNT=5

# =============================================================================
# Data Collection (การเก็บข้อมูล)
# =============================================================================

# อัพเดทข้อมูลข่าวทุกกี่นาที
NEWS_UPDATE_INTERVAL_MINUTES=15

# อัพเดท sentiment ทุกกี่นาที
SENTIMENT_UPDATE_INTERVAL_MINUTES=30

# อัพเดทข้อมูล market context (DXY, VIX, etc.) ทุกกี่นาที
MARKET_CONTEXT_UPDATE_INTERVAL_MINUTES=5

# =============================================================================
# Model Paths (เส้นทางไฟล์โมเดล AI)
# =============================================================================

LSTM_MODEL_PATH=models/lstm_price_predictor.h5
CNN_MODEL_PATH=models/cnn_pattern_detector.h5
XGBOOST_MODEL_PATH=models/xgboost_news_scorer.pkl
RF_MODEL_PATH=models/rf_meta_learner.pkl
BERT_MODEL_PATH=models/bert_sentiment/

# =============================================================================
# Backtesting (การทดสอบย้อนหลัง)
# =============================================================================

# เงินทุนเริ่มต้นสำหรับ backtest
BACKTEST_INITIAL_CAPITAL=10000.0

# ค่าคอมมิชชั่นต่อ lot (USD)
BACKTEST_COMMISSION_PER_LOT=7.0

# Spread เฉลี่ยของ XAUUSD (points)
BACKTEST_AVERAGE_SPREAD=30

# Slippage เฉลี่ย (points)
BACKTEST_SLIPPAGE=2

# =============================================================================
# Advanced Settings (การตั้งค่าขั้นสูง)
# =============================================================================

# โหมดการทำงาน: demo, live
TRADING_MODE=demo

# เปิดใช้งาน paper trading (true/false)
PAPER_TRADING=true

# หยุดเทรดหลังจากขาดทุนติดต่อกันกี่ครั้ง
CONSECUTIVE_LOSS_LIMIT=5

# Pause ระบบหากแม่นยำต่ำกว่า (%)
MIN_ACCURACY_THRESHOLD=35

# ตรวจสอบ model drift ทุกกี่วัน
MODEL_DRIFT_CHECK_DAYS=30

# Retrain model อัตโนมัติหากแม่นยำลดลงเกิน (%)
AUTO_RETRAIN_ACCURACY_DROP=10

# =============================================================================
# System Settings (การตั้งค่าระบบ)
# =============================================================================

# Run loop ทุกกี่วินาที (60 = ทุก 1 นาที)
MAIN_LOOP_INTERVAL_SECONDS=60

# Timezone
TIMEZONE=Asia/Bangkok

# เปิดใช้งาน multiprocessing (true/false)
USE_MULTIPROCESSING=false

# จำนวน CPU cores ที่ใช้ (0 = auto)
CPU_CORES=0

# =============================================================================
# Safety Features (คุณสมบัติด้านความปลอดภัย)
# =============================================================================

# ยืนยันก่อนส่งคำสั่งเทรดจริง (true/false)
CONFIRM_BEFORE_TRADE=false

# เปิดใช้งาน emergency stop button (true/false)
ENABLE_EMERGENCY_STOP=true

# ส่งอีเมลแจ้งเตือนเมื่อเกิดข้อผิดพลาดร้ายแรง (true/false)
SEND_ERROR_EMAILS=false

# อีเมลที่จะส่งการแจ้งเตือน
ALERT_EMAIL=your-email@example.com

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
#
# หมายเหตุ:
# - ค่าทั้งหมดสามารถปรับแต่งได้ตามความเหมาะสม
# - แนะนำให้ทดสอบบน demo account ก่อนใช้จริง
# - อ่าน README.md สำหรับรายละเอียดเพิ่มเติม
# - อย่าแชร์ไฟล์นี้หากใส่ข้อมูลจริง (มี API keys และ passwords)
#
# =============================================================================
